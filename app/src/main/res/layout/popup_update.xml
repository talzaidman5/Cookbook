<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_notepad">

    <TextView
        android:id="@+id/popup_TXT_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:fontFamily="@font/hebrow_lior"
        android:layout_centerHorizontal="true"
        android:text="עידכון"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="כותרת:"
    android:textSize="22dp"
    android:layout_marginRight="40dp"
    android:textColor="#000000"
    android:layout_marginTop="20dp"
    android:fontFamily="@font/hebrow_lior"
    android:layout_alignParentRight="true"
    android:layout_below="@id/popup_TXT_title"/>

    <EditText
        android:id="@+id/popup_TXT_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textColorHint="#000000"
        android:layout_below="@id/popup_TXT_title"
        android:textSize="19dp"
android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:gravity="right"
        android:fontFamily="@font/hebrow_lior"
        android:lines="1" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מרכיבים:"
        android:textSize="22dp"
        android:layout_marginRight="38dp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/hebrow_lior"
        android:layout_alignParentRight="true"
        android:layout_below="@id/popup_TXT_name"/>

    <EditText
        android:id="@+id/popup_TXT_title_ingredient"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/popup_TXT_name"
        android:textSize="19dp"
        android:textColor="#000000"
        android:gravity="right"
        android:textColorHint="#000000"
android:layout_alignParentRight="true"
        android:fontFamily="@font/hebrow_lior"
            android:lines="1"
        android:layout_marginRight="110dp"
        android:layout_marginTop="12dp"
            />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/listView_ingredient"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/add"
        android:background="@drawable/ttt"

        />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/add"
        android:background="@drawable/add"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/popup_TXT_title_ingredient"/>


    <TextView
        android:id="@+id/popup_title_prepering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שלבי הכנה:"
        android:textSize="22dp"
        android:layout_marginRight="38dp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/hebrow_lior"
        android:layout_alignParentRight="true"
        android:layout_below="@id/listView_ingredient"/>


    <EditText
        android:id="@+id/popupTXT_preparation_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linear"
        android:layout_below="@id/popup_title_prepering"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/ttt"
        android:gravity="right"
        android:fontFamily="@font/hebrow_lior"
        android:inputType="textMultiLine"
        android:lines="5"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="19dp" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
    <Button
        android:id="@+id/popup_BTN_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="עדכן"
        android:layout_weight="1"
        android:fontFamily="@font/hebrow_lior"
        android:layout_margin="8dp"
        android:background="@drawable/corners_btn"
        android:textSize="20dp"
        android:textStyle="bold"
       android:layout_above="@id/popup_BTN_no"
        />

    <Button
        android:id="@+id/popup_BTN_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ביטול"
        android:fontFamily="@font/hebrow_lior"
        android:background="@drawable/corners_btn"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textColor="#000000"
        android:textSize="20dp"
        />
    </LinearLayout>

</RelativeLayout>